<div class="login ">
	<div class=text-center>
		<h1>Log in</h1>
		<div class="row justify-content-center">
		  <div class="col-md-6 col-md-offset-3">
		    <%= form_for(:session, url: login_path) do |f| %>
		      <%= f.label :email, :style => "font-size: 18px" %>
		      <%= f.email_field :email, class: 'form-control' %>
		      <%= f.label :password, :style => "font-size: 18px" %>
		      <%= f.password_field :password, class: 'form-control' %>
		      <%= f.submit "Log in", :class => "btn btn-outline", :style => "border-color: #3ac9c6; color: #3ac9c6" %>
		      <%= link_to "Sign in with Google", "/auth/google_oauth2", :class => "btn btn-outline", :style => "border-color: #3ac9c6; color: #3ac9c6"%>
	
				<% end %>
		    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
		  </div>
		</div>
	</div>
</div>